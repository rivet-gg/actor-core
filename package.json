{
  "private": true,
  "name": "@rivetkit/workspace",
  "scripts": {
    "start": "npx turbo watch build",
    "dev": "npx turbo watch dev",
    "build": "npx turbo build",
    "test": "npx turbo test",
    "test:watch": "npx turbo watch test",
    "check-types": "npx turbo check-types",
